---
const currentPath = Astro.url.pathname;
const navItems = [
  { name: 'Home', path: '/' },
  { name: 'Menu', path: '/menu' },
  { name: 'Gallery', path: '/gallery' },
  { name: 'Contact', path: '/contact' }
];
---

<header class="header">
  <div class="container header-content">
    <a href="/" class="logo">
      <span class="logo-text">Crostini <span class="logo-amp">&</span> Java</span>
    </a>

    <button class="mobile-menu-btn" aria-label="Toggle menu">
      <span class="bar"></span>
      <span class="bar"></span>
      <span class="bar"></span>
    </button>

    <nav class="main-nav">
      <ul class="nav-links">
        {navItems.map(item => (
          <li>
            <a 
              href={item.path} 
              class={`nav-link ${currentPath === item.path || (currentPath !== '/' && item.path.startsWith(currentPath)) ? 'active' : ''}`}
            >
              {item.name}
            </a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 100;
    background-color: rgba(253, 251, 247, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid var(--color-border);
    transition: all var(--transition-medium);
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 80px;
  }

  .logo {
    font-family: var(--font-family-heading);
    font-size: 1.5rem;
    font-weight: 700;
    letter-spacing: -0.02em;
    color: var(--color-text);
  }

  .logo-amp {
    color: var(--color-accent);
    font-weight: 400;
    font-size: 1.3rem;
  }

  .nav-links {
    display: flex;
    gap: 2rem;
  }

  .nav-link {
    font-weight: 500;
    font-size: 1rem;
    position: relative;
    padding: 0.5rem 0;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background-color: var(--color-accent);
    transition: width var(--transition-fast);
  }

  .nav-link:hover::after,
  .nav-link.active::after {
    width: 100%;
  }

  .nav-link.active {
    color: var(--color-accent);
  }

  /* Mobile Menu Button - Hidden on Desktop */
  .mobile-menu-btn {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    flex-direction: column;
    gap: 6px;
    padding: 0.5rem;
  }

  .bar {
    width: 25px;
    height: 2px;
    background-color: var(--color-text);
    transition: var(--transition-fast);
  }

  @media (max-width: 768px) {
    .mobile-menu-btn {
      display: flex;
      z-index: 101; /* Stay above the full screen menu */
    }

    /* Open state for hamburger -> X */
    .mobile-menu-btn.open .bar:nth-child(1) {
      transform: translateY(8px) rotate(45deg);
    }
    .mobile-menu-btn.open .bar:nth-child(2) {
      opacity: 0;
    }
    .mobile-menu-btn.open .bar:nth-child(3) {
      transform: translateY(-8px) rotate(-45deg);
    }

    .main-nav {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100vh;
      background-color: var(--color-bg);
      clip-path: circle(0% at 100% 0%);
      transition: clip-path 0.6s cubic-bezier(0.77, 0, 0.175, 1);
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .main-nav.open {
      clip-path: circle(150% at 100% 0%);
    }

    .nav-links {
      flex-direction: column;
      align-items: center;
      gap: 2.5rem;
      padding: 2rem;
    }

    .nav-links li {
      opacity: 0;
      transform: translateY(20px);
      transition: all 0.4s ease;
    }

    .main-nav.open .nav-links li {
      opacity: 1;
      transform: translateY(0);
    }

    .main-nav.open .nav-links li:nth-child(1) { transition-delay: 0.2s; }
    .main-nav.open .nav-links li:nth-child(2) { transition-delay: 0.3s; }
    .main-nav.open .nav-links li:nth-child(3) { transition-delay: 0.4s; }
    .main-nav.open .nav-links li:nth-child(4) { transition-delay: 0.5s; }

    .nav-link {
      font-size: 2rem;
      font-family: var(--font-family-heading);
    }
  }
</style>

<script>
  // Simple mobile menu toggle
  document.addEventListener('DOMContentLoaded', () => {
    const btn = document.querySelector('.mobile-menu-btn');
    const nav = document.querySelector('.main-nav');
    const headerEl = document.querySelector('.header');
    
    if (btn && nav && headerEl) {
      btn.addEventListener('click', () => {
        btn.classList.toggle('open');
        nav.classList.toggle('open');
        headerEl.classList.toggle('menu-open');
        
        // Prevent body scrolling when menu is open
        if (nav.classList.contains('open')) {
          document.body.style.overflow = 'hidden';
        } else {
          document.body.style.overflow = '';
        }
      });
      
      // Header scroll effect
      window.addEventListener('scroll', () => {
        if (window.scrollY > 50) {
          headerEl.classList.add('scrolled');
        } else {
          headerEl.classList.remove('scrolled');
        }
      });
    }
  });
</script>
