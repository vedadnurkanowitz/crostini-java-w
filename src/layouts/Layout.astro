---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
	description?: string;
}

const { title, description = "Crostini and Java - Espresso, Pastries, Sandwiches and Wine in San Francisco." } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Outfit:wght@400;600;700&display=swap" rel="stylesheet">
		
		<title>{title} | Crostini and Java</title>
	</head>
	<body>
		<Header />
		<main>
			<slot />
		</main>
		<Footer />
		<script>
			import { inView, animate } from "framer-motion/dom";

			// Initialize animations when the DOM is fully loaded
			document.addEventListener('DOMContentLoaded', () => {
				// Slide Up Animation
				inView(".slide-up", (element) => {
					const target = element as HTMLElement;
					// Extract any inline animation-delay (e.g., style="animation-delay: 0.2s")
					const delayCSS = target.style.animationDelay;
					const delay = delayCSS ? parseFloat(delayCSS) : 0;
					
					// Clear CSS delay to avoid conflicts
					target.style.animationDelay = '';
					
					animate(
						target,
						{ opacity: [0, 1], y: [20, 0] },
						{ duration: 0.8, delay: delay, ease: "easeOut" }
					);
				});

				// Fade In Animation
				inView(".fade-in", (element) => {
					const target = element as HTMLElement;
					const delayCSS = target.style.animationDelay;
					const delay = delayCSS ? parseFloat(delayCSS) : 0;
					
					target.style.animationDelay = '';
					
					animate(
						target,
						{ opacity: [0, 1] },
						{ duration: 1.0, delay: delay, ease: "easeOut" }
					);
				});
			});
		</script>
	</body>
</html>
